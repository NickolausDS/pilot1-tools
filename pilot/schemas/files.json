{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Files block",
    "type": "object",
    "description": "Schema for files block in a record.",
    "properties": {
        "files": {
            "type": "array",
            "description": "Data files and their metadata.",
            "items": {
                "type": "object",
                "description": "Data file metadata.",
                "properties": {
                    "globus": {
                        "type": "string",
                        "description": "The Globus Endpoint ID and path to the data."
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "description": "The URL to the data."
                    },
                    "mime_type": {
                        "type": "string",
                        "description": "The MIME type of the file."
                    },
                    "length": {
                        "type": "integer",
                        "description": "The size of the file in bytes."
                    },
                    "filename": {
                        "type": "string",
                        "description": "The file's name."
                    },
                    "md5": {
                        "type": "string",
                        "description": "The MD5 has of the file."
                    },
                    "sha1": {
                        "type": "string",
                        "description": "The SHA1 hash of the file."
                    },
                    "sha256": {
                        "type": "string",
                        "description": "The SHA256 hash of the file."
                    },
                    "sha512": {
                        "type": "string",
                        "description": "The SHA512 hash of the file."
                    },
                    "x-label": {
                        "type": "string",
                        "description": "X-label, if the dataframe_type is Matrix"
                    },
                    "y-label": {
                        "type": "string",
                        "description": "Y-label, if the dataframe_type is Matrix"
                    },
                    "data_type": {
                        "type": "string",
                        "enum": ["Metadata", "Drug Response", "Microarray", "RNA-seq", "Reference"],
                        "description" : "Data category, may be: 'Drug Descriptor', 'Drug Response', 'Microarray', 'RNA-seq', 'Reference'"
                    },
                    "dataframe_type": {
                        "type": "string",
                        "enum": ["List", "Matrix"],
                        "description" : "Dataframe structure, matrix or list"
                    },
                    "units": {
                        "type": "integer",
                        "description": "Units or scale (e.g., log, log10) of the data."
                    }
                },
                "additionalProperties": false,
                "required": [
                    "data_type",
                    "dataframe_type",
                    "filename",
                    "mime_type"
                ]
            },
            "minItems": 1
        }
    }
}
